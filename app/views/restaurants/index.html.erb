<div class ='container'>
  <h1>餐廳前台</h1>
  <div class = 'navbar text-center'>
    <ul class="nav nav-pills nav-pills-center">
      <li class='active'><%= link_to '全部餐廳', restaurants_path %></li>
      <% @categories.each do |category| %>
        <li><%= link_to category.name, category_path(category) %></li>
      <% end %>
    </ul>
  </div>
  <div class = 'row'>
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-4 col-sm-6">
        <div class='restaurant-item'>
          <%= image_tag restaurant.image ,class:"img-responsive img-thumbnail"%>
          <div class='caption'> 
            <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
            <p class="label label-default"><%= restaurant.category.name %></p>
            <p><%= truncate(restaurant.description, length: 80) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class='text-center'>
  <%= paginate @restaurants %>
</div>