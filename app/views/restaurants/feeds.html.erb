<ul class="nav nav-tabs">
  <li role="presentation"><%= link_to '首頁', root_path %></li>
  <li role="presentation" class="active"><%= link_to '最新動態', feeds_restaurants_path %></li>
</ul>
<br>
<div> 
  <h1 style="margin-left: 50px">餐廳最新動態</h1>
  <br>
  <div class="panel panel-default col-md-4 col-md-offset-1">

    <div class="panel-heading">
      <h3 class="panel-title">最新餐廳</h3>
    </div>
    <div class="panel-body ">
      <% @recent_restaurants.each do |restaurant| %>
      <h4><%= link_to restaurant.name, restaurant_path(restaurant) %></h4>
      <p><%= restaurant.category.name %></p>
      <p><%= restaurant.description %></p>
      <hr>
      <% end %>
    </div>
  </div>

  <div class="panel panel-default col-md-4 col-md-offset-1">
    <div class="panel-heading">
      <h3 class="panel-title">最新評論</h3>
    </div>
    <div class="panel-body ">
      <% @recent_comments.each do |comment| %>
      <h4><%= link_to comment.restaurant.name, restaurant_path(comment.restaurant) %></h4>
      <p><%= comment.content %></p>
      <p>by <%= link_to comment.user.name, user_path(comment.user) %></p>
      <hr>
      <% end %>
    </div>
  </div>
</div>