<div style='margin:20px'>
  <h2>Top Ranking 10大人氣餐廳<small>(收藏數最高)</small></h2>
  
  <% @restaurants.each do |restaurant| %>
    <div>
      <%= image_tag restaurant.image %>
      <h4><%= restaurant.name %></h4>
      <span>收藏數：<%= restaurant.favorites_count %></span>
      <p><%= truncate(restaurant.description, length: 80) %></p>
      <% link_to 'Show', restaurant_path(restaurant), class:'btn brn-primary' %>
      <%= render partial: "shared/favorite", locals: {restaurant: restaurant} %>
    </div>
  <% end %>
</div>