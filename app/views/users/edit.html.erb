<div class='form-container col-md-8 col-md-offset-1'>
  <h1> Edit Profile</h1>
  <br>
  <%= form_for [@user] do |f| %>
    <div class='form_group'>
      <%= f.label :name,'Name'  %>
      <%= f.text_field :name,class: "form-control" %>
    </div>
    <div class='form-group'>
      <%= f.label :intro , '自我介紹'  %>
      <%= f.text_field :intro,class: "form-control" %>
    </div>
    <div class='form-group'>
      <%= f.label :avatar, "大頭照上傳" %>
      <%= image_tag @user.avatar, width:'100px' if @user.avatar? %>
      <%= f.file_field :avatar %>
    </div>
    <div class='form-group'>
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'Cancel' , user_path(@user) ,class: "btn btn-default" %>
    </div>
  <% end %>
</div>