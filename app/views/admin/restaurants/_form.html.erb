<% if @restaurant.errors.present? %>
  <ul>
    <% @restaurant.errors.each do |error,message| %>
      <li><%= "#{error.capitalize} #{message}" %></li>
    <% end %>
  </ul>
<% end %>

<div class='form-container col-md-8 col-md-offset-1'>
  <h1> 請新增餐廳資訊</h1>
  <br>
  <%= form_for [:admin , @restaurant] do |f| %>
    <div class='form-group'>
      <%= f.label :name , 'Name'  %>
      <%= f.text_field :name,class: "form-control" %>
    </div>
    <div class ='form-group'>
      <%= f.label :tel , 'Tel' %>
      <%= f.text_field :tel ,class: "form-control"%>
    </div>
    <div class = 'form-group'>
      <%= f.label :address , 'Address'%>
      <%= f.text_field :address ,class: "form-control"%>
    </div>
    <div class='form-group'>
      <%= f.label :opening_hours , '營業時間' %>
      <%= f.text_field :opening_hours ,class: "form-control"%>
    </div>
    <div class='form-group'>
      <%= f.label :description , 'Description' %>
      <%= f.text_field :description  ,class: "form-control"%>
    </div>
    <div class='form-group'>
      <%= f.label :image, "Photo" %>
      <%= image_tag @restaurant.image, width:'300px' if @restaurant.image? %>
      <%= f.file_field :image %>
    </div>
    <div class='form-group'>
      <%= f.submit  %>
    </div>
  <% end %>
</div>