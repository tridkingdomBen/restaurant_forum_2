<div class="container">
  <div >
   <h1>餐廳分類列表</h1>
 </div>
  <div >
    <%= link_to 'Restaurant', admin_restaurants_path %> |
    <%= link_to 'Categories', admin_categories_path %>
    <%= link_to 'New Restaurant', new_admin_restaurant_path, class: "btn btn-primary" %>
    <hr>
    <% if @category.errors.any? %>
      <%= @category.errors.full_messages.to_sentence %>
    <% end %>
    <div class='form-inline '>
      <%= form_for [:admin , @category] do |c| %>
      <div class='form-group'>
        <%= c.text_field :name,class: "form-control", placeholder: "Category Name" %>
      </div>
        <%= c.submit class:'btn btn-primary' %>
      <% end %>
    </div>
  </div>
       <table class="table table-striped table-bordered">
         <thead>
           <tr>
            <th>#</th>
            <th>Category name</th>
            <th>#</th>
           </tr>
         </thead>
         <tbody>
           <% @categories.each do |category| %>
           <tr>
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td>
              <%= link_to 'Edit', admin_categories_path(id:category.id) %>
              <%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: "Are you sure?"} %>
            </td>
           </tr>
           <% end %>
         </tbody>
       </table>
 </div>